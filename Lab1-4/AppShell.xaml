<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Lab1_4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Lab1_4"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False">

    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
        x:Name="gg"
        Title="Calculator"
        ContentTemplate="{DataTemplate local:Calculator}"
        Route="Calculator"
        Icon="calculator.png"/>

        <ShellContent
        Title="Integral"
        ContentTemplate="{DataTemplate local:Integral}"
        Route="Integral"
        Icon="integral.png"/>

        <ShellContent
        Title="DataBase"
        ContentTemplate="{DataTemplate local:DataBase}"
        Route="DataBase"
        Icon="data_base.png"/>

    </FlyoutItem>

</Shell>
